<% if Rails.env.production? && devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <div class="uk-margin-small uk-text-center">
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'uk-button uk-button-primary uk-width-1-1 uk-flex uk-flex-middle' do %>
        <span uk-icon="icon: <%= provider %>"></span>
        <div class="uk-margin-auto"><%= t('.sign_in_with_provider', provider: OmniAuth::Utils.camelize(provider)) %></div>
      <% end %>
    </div>
  <% end %>
<% end %>

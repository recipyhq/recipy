<div class="uk-container uk-padding">
  <div class="uk-width-large uk-align-center">
    <h2 class="uk-text-center title"><%= t('.forgot_your_password') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <%= f.input :email, required: true, autofocus: true %>

      <div class="uk-margin-medium">
        <%= f.button :submit, t('.send_me_reset_password_instructions'), class: 'uk-width-1-1' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>

<div class="uk-container uk-padding">
  <div class="uk-width-large uk-align-center">
    <h2 class="uk-text-center title"><%= t('.sign_in') %></h2>

    <hr class="uk-divider-icon">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name, :next => params[:next] || nil)) do |f| %>
      <%= f.error_notification %>

      <%= f.input :email, label: t('.email'),autofocus: true %>
      <%= f.input :password %>

      <%= f.input :remember_me, input_html: { class: 'uk-checkbox uk-margin-left'}, as: 'boolean' %>

      <div class="uk-margin-medium">
        <%= f.button :submit, t('.sign_in'), class: 'uk-width-1-1' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

<div class="uk-background-fixed uk-background-center-center uk-background-cover" style="background-image: url(https://images.unsplash.com/photo-1507842217343-583bb7270b66?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1453&q=80);">
  <br>
  <% if user_signed_in? %>
  <div class="uk-padding-small">
  <div class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid="masonry: true" name="gridglobal">
    <% @notebooks.each do |notebook| %>
      <div>
        <div class="uk-card uk-card-default uk-width-1-1@m">
          <div class="uk-card-header">
            <div class="uk-grid-small uk-flex-middle" uk-grid>
              <div class="uk-width-expand uk-text-center">
                <h3 class="uk-card-title uk-margin-remove-bottom"><%= link_to notebook.title, notebook, :class => "uk-button uk-button-text "%></h3>
              </div>
            </div>
          </div>
          <div class="uk-card-body">
            <div class="uk-text-center">
              <p><%= notebook.description %></p>
            </div>

            <div class="uk-margin-top uk-text-center">
              <% if notebook.image.attached? %>
                <%= image_tag(notebook.image.variant(resize: '400x400')) %>
              <% else %>
                <%= image_tag("https://pngimage.net/wp-content/uploads/2018/06/not-found-png-3.png") %>
              <% end %>
            </div>
          </div>
          <div class="uk-card-footer">
            <div class="uk-position-bottom-right">
              <td><%= link_to edit_notebook_path(notebook), :style => "color:black" do %></td>
                  <i class="fa-2x far fa-edit"> </i>
                <% end %>
                <td><%= link_to notebook, method: :delete, :style => "color:black", data: { confirm: 'Êtes vous sûr de vouloir supprimer ce carnet de recette ?' } do %></td>
                    <i class="fa-2x far fa-trash-alt"> </i>
                  <% end %>
                  </div>
          </div>
        </div>
      </div>
    <% end %>
    <div>
      <div class="uk-padding-large">
        <%= link_to new_notebook_path do %>
          <i class="fa-8x far fa-plus-square"> </i>
        <% end %>
      </div>
    </div>
  </div>
  </div>
    <% end %>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
</div>

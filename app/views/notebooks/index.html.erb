<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

<div class="uk-container uk-padding">
  <h2 class="title"><%= t('notebook.title') %></h2>
  <div class="uk-margin-bottom">
    <%= link_to t('notebook.add'), new_notebook_path, :class => 'uk-button uk-button-primary uk-width-1' %>
  </div>
  <div class="uk-child-width-1-1@s uk-child-width-1-3@m" uk-grid="masonry: true" name="gridglobal">
    <% @notebooks.each do |notebook| %>
      <div>
        <div class="uk-card uk-card-default uk-width-1-1@m">
          <div class="uk-card-header">
            <div class="uk-grid-small uk-flex-middle" uk-grid>
              <div class="uk-width-expand uk-text-center">
                <h3><%= link_to notebook.title, notebook, class: 'uk-card-title uk-margin-remove-bottom' %></h3>
              </div>
            </div>
          </div>
          <div class="uk-card-body">
            <div class="uk-text-center">
              <p><%= notebook.description %></p>
            </div>

            <div class="uk-margin-top uk-text-center">
              <% if notebook.image.attached? %>
                <%= image_tag(notebook.image.variant(resize: '400x400')) %>
              <% else %>
                <%= image_tag("https://pngimage.net/wp-content/uploads/2018/06/not-found-png-3.png") %>
              <% end %>
            </div>
          </div>
          <div class="uk-card-footer">
            <%= link_to notebook, method: :delete, class: "uk-button uk-button-text uk-align-right", data: { confirm: t('notebook.confirm_delete') } do %>
              <i class ="fa fa-lf fa-trash"></i>
            <% end %>
            <%= link_to edit_notebook_path(notebook), class: "uk-button uk-button-text uk-align-right" do %>
              <i class="far fa-edit"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

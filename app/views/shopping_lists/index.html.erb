<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

<div class="uk-container uk-padding">
  <h2 class="title"><%= t("shopping_list.title") %></h2>

  <%= link_to t('shopping_list.new'), new_shopping_list_path, class: "uk-button uk-button-default uk-width-1 uk-margin-bottom" %>
  <div class="uk-grid-small uk-child-width-1@s uk-child-width-1-4@m" uk-grid>
    <% if @shopping_lists %>
      <% @shopping_lists.each do |shopping_list| %>
        <div>
          <div class="uk-card uk-card-default">
            <div class="uk-card-body">
              <div class="uk-text-center">
                <h3 class="uk-card-title">
                  <%= link_to shopping_list.name, shopping_list, class: 'uk-card-title uk-margin-remove-bottom' %>
                </h3>
              </div>
              <ul class="uk-list uk-text-center">
                <% shopping_list.ingredients.first(5).each do |ingredient| %>
                  <li>
                    <%= ingredient.name %>
                  </li>
                <% end %>
                <% if shopping_list.ingredients.count > 5 %>
                  <div class="uk-text uk-text-center">
                    ...
                  </div>
                <% end %>
              </ul>
            </div>
            <div class="uk-card-footer uk-flex uk-flex-center">
              <%= link_to edit_shopping_list_path(shopping_list), class: "uk-button" do %>
                <i uk-tooltip="<%= t('shopping_list.edite') %>" class="far fa-edit fa-2x"></i>
              <% end %>
              <%= link_to  shopping_list, method: :delete, class: "uk-button", data: { confirm: t('shopping_list.confirm_delete') } do %>
                <i uk-tooltip="<%= t('shopping_list.delete') %>" class="far fa-trash-alt fa-2x"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="uk-container uk-padding">
  <h2 class="title"><%= t("shopping_list.title") %></h2>

  <%= link_to t('shopping_list.new'), new_shopping_list_path, class: "uk-button uk-button-default uk-width-1 uk-margin-bottom" %>
  <div class="uk-grid-small uk-child-width-1@s uk-child-width-1-4@m" uk-grid>
    <% if @shopping_lists %>
      <% @shopping_lists.each do |shopping_list| %>
        <div>
          <div class="uk-card uk-card-default">
            <div class="uk-card-body">
              <div class="uk-text-center">
                <h3 class="uk-card-title">
                  <%= shopping_list.name %>
                </h3>
              </div>
              <ul class="uk-list uk-text-center">
                <% shopping_list.ingredients.first(5).each do |ingredient| %>
                  <li>
                    <%= ingredient.name %>
                  </li>
                <% end %>
                <% if shopping_list.ingredients.count > 5 %>
                  <div class="uk-text uk-text-center">
                    ...
                  </div>
                <% end %>
              </ul>
            </div>
            <div class="uk-card-footer">
              <%= link_to t("recipe.action.show"), shopping_list, class: "uk-button uk-button-text" %>
              <%= link_to t("recipe.action.edit"), edit_shopping_list_path(shopping_list), class: "uk-button uk-button-text" %>
              <%= link_to t("recipe.action.destroy"), shopping_list, method: :delete, data: {confirm: t("recipe.action.confirm")}, class: "uk-button uk-button-text" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

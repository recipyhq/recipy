<div class="nested-fields uk-width-1-3">
  <div class="uk-card uk-card-default uk-card-body">
    <h3 class="uk-card-title"><%= t('point_of_sale.hour') %></h3>
    <div class=" uk-grid">
      <div class="uk-width-1-1">

        <%= f.input :day, :label => t("point_of_sale.day"),
                    collection: ["Lundi", "Mardi", "Mercredi", "Jeudi", "Vendredi", "Samedi", "Dimanche", "En semaine", "Le Week-end", "Jours fériés"].to_a,
                    as: :select, :include_blank => false, input_html: {
            slimselect: true,
            slimselectNoResult: t('slimselect.pos_day.no_result'),
            slimselectSearchPlaceholder: t('slimselect.pos_day.search_placeholder'),
            slimselectPlaceholder: t('slimselect.pos_day.search_placeholder')
          } %>

        <%#= f.input :day, label: t('point_of_sale.day') %>
      </div>
      <div class="uk-width-1-2">
        <%= f.input :open, label: t('point_of_sale.open_hour') %>
      </div>
      <div class="uk-width-1-2">
        <%= f.input :close, label: t('point_of_sale.close_hour') %>
      </div>
    </div>
    <div class="uk-text-center uk-margin-medium-top">
      <h4 class="uk-margin-remove"><%= link_to_remove_association t("point_of_sale.remove"), f, class: "uk-link" %></h4>
    </div>
  </div>
</div>

<div class="nested-fields uk-width-1-3">
  <div class="uk-card uk-card-default uk-card-body">
    <div class=" uk-grid">
        <%= f.simple_fields_for :openning_hours do |ff| %>
          <div class="uk-width-1-1">
            <%= f.input :day, label: 'Day' %>
          </div>
          <div class="uk-width-1-2">
            <%= f.input :open, label: 'Open hour' %>
          </div>
          <div class="uk-width-1-2">
            <%= f.input :close, label: 'Close hour' %>
          </div>
        <% end %>
    </div>
    <div class="uk-text-center uk-margin-medium-top">
      <h4 class="uk-margin-remove"><%= link_to_remove_association "delete", f, class: "uk-link" %></h4>
    </div>
  </div>
</div>
